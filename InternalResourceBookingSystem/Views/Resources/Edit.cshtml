@model Resource
@{
    ViewData["Title"] = "Edit Resource";
}
<div class="container-fluid">
    <!-- Header -->
    <div class="resource-header">
        <h1>Edit Resource</h1>
        <div class="subtitle">Update Resource Details</div>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required placeholder="Enter resource name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" required placeholder="Enter resource description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" required placeholder="Enter resource location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Enter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <button type="button" class="btn btn-secondary" id="backBtn" style="width:auto;height:44px;border-radius: 50px;padding: 10px 24px">
                        <i class="bi bi-arrow-left" style="margin-right: 8px;"></i>
                        Back
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
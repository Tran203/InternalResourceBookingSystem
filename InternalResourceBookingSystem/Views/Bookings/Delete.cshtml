@model Booking
@{
    ViewData["Title"] = "Cancel Booking";
}
<div class="container-fluid">
    <!-- Header -->
    <div class="resource-header">
        <h1>Cancel Booking</h1>
        <div class="subtitle">Confirm Cancellation of Booking</div>
    </div>

    <!-- Booking Details -->
    <div class="description-list">
        <dl class="row">
            <dt class="col-sm-2 description-term">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-10 description-detail">
                @Model.StartTime.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")
            </dd>
            <dt class="col-sm-2 description-term">
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd class="col-sm-10 description-detail">
                @Model.EndTime.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")
            </dd>
            <dt class="col-sm-2 description-term">
                @Html.DisplayNameFor(model => model.BookedBy)
            </dt>
            <dd class="col-sm-10 description-detail">
                @Html.DisplayFor(model => model.BookedBy)
            </dd>
            <dt class="col-sm-2 description-term">
                @Html.DisplayNameFor(model => model.Purpose)
            </dt>
            <dd class="col-sm-10 description-detail">
                <span class="purpose-text">@Html.DisplayFor(model => model.Purpose)</span>
            </dd>
            <dt class="col-sm-2 description-term">
                @Html.DisplayNameFor(model => model.Resource)
            </dt>
            <dd class="col-sm-10 description-detail">
                @Html.DisplayFor(model => model.Resource.Name)
            </dd>
        </dl>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-start align-items-center gap-2">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">Delete</button>
        <button type="button" class="btn btn-secondary" id="backBtn" style="width:auto;height:44px;border-radius: 50px;padding: 10px 24px">
            <i class="bi bi-arrow-left" style="margin-right: 8px;"></i>
            Back
        </button>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Cancellation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to cancel this booking for <strong>@Model.Purpose</strong> in <strong>@Model.Resource.Name</strong>?
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Confirm </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
        });
    </script>
}
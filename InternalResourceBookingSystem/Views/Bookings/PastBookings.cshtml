@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Past Bookings";
}
<div class="container-fluid">
    <!-- Header -->
    <div class="resource-header">
        <h1>Past Bookings</h1>
        <div class="subtitle">View Previous Resource Bookings</div>
    </div>

    <!-- Bookings Table -->
    <table id="bookingsTable" class="table table-hover">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Booked By</th>
                <th>Purpose</th>
                <th>Resource</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartTime.ToString("MMMM dd, yyyy h:mm tt")</td>
                    <td>@item.EndTime.ToString("MMMM dd, yyyy h:mm tt")</td>
                    <td>@item.BookedBy</td>
                    <td>
                        <span class="badge" style="background: var(--info-color); color: white; padding: 0.3rem 0.6rem; font-size: 0.7rem;">@item.Purpose</span>
                    </td>
                    <td>
                        @if (item.Resource != null)
                        {
                            @item.Resource.Name
                        }
                        else
                        {
                            <b><i><i class="bi bi-exclamation-circle-fill"></i>Resource deleted</i> </b>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bookingsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                language: {
                    search: "Search bookings:",
                    emptyTable: "No active bookings available.",
                    info: "Showing _START_ to _END_ of _TOTAL_ bookings",
                    paginate: {
                        previous: "Prev",
                        next: "Next"
                    }
                }
            });
        });
    </script>
}